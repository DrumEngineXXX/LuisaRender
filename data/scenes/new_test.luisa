Integrator integrator : Normal {}

Shape bunny : WavefrontObj {
  path { "data/meshes/bunny/bunny.obj" }
}

Film film : RGB {
  resolution { 1200, 800 }
}

Camera camera : Pinhole {
  film { @film }
  position { 0, 0.75, 7 }
  target { 0, 0.75, 0 }
}

task : SingleShot {
  integrator { @integrator }
  sampler : Independent {
    spp { 4096 }
  }
  camera { @camera }
  shapes { @bunny }
}
