Integrator integrator : AO {}

Shape bunny : WavefrontObj {
  path { "../meshes/cow/cow.obj" }
  transform : TRS {
    translation { -0.1, 0.0, 0.0 }
  }
}

Film film : RGB {
  resolution { 1200, 800 }
}

Camera camera : Pinhole {
  film { @film }
  position { 0, 0.05, 0.5 }
  target { 0, 0.05, 0 }
}

task : SingleShot {
  integrator { @integrator }
  sampler : Independent {
    spp { 1024 }
  }
  camera { @camera }
  shapes { @bunny }
}
