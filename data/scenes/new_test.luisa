Integrator integrator : AO {}

Transform a1 : TRS {
  translation { -0.1, 0.0, 0.0 }
}

Transform a2 : TRS {
  translation { 0.1, 0.0, 0.0 }
}

Shape bunny : WavefrontObj {
  path { "../meshes/cow/cow.obj" }
  transform : LinearTRSAnimation {
    time_points { 0.0, 1.0 }
    transforms { @a1, @a2 }
  }
}

Film film : RGB {
  resolution { 1200, 800 }
}

Camera camera : Pinhole {
  film { @film }
  position { 0, 0.05, 0.5 }
  target { 0, 0.05, 0 }
}

task : SingleShot {
  integrator { @integrator }
  sampler : Independent {
    spp { 1024 }
  }
  shutter_span { 0.45, 0.55 }
  camera { @camera }
  shapes { @bunny }
}
