Integrator integrator : AO {}

Transform a1 : TRS {
  translation { -0.1, 0.0, 0.0 }
}

Transform a2 : TRS {
  translation { 0.1, 0.0, 0.0 }
}

Shape cow_ref : WavefrontObj {
  path { "../meshes/cow/cow.obj" }
  transform : TRS {
    scaling { 0.7 }
    rotation { 0, 1, 0, -10 }
  }
}

Shape cow : InstanceGroup {
  children { @cow_ref }
  transform : LinearTRSAnimation {
    time_points { 0.0, 1.0 }
    transforms { @a1, @a2 }
  }
}

Shape cows : InstanceGroup {
  children { @cow_ref }
  transform : TRS {
    translation { 0.05, -0.02, 0.0 }
  }
}

Shape another_cow : InstanceGroup {
  children { @cow }
  transform : TRS {
    scaling { 1.2 }
    translation { -0.01, 0.03, 0.0 }
  }
}

Film film : RGB {
  resolution { 1200, 800 }
}

Camera camera : Pinhole {
  film { @film }
  position { 0, 0.05, 0.5 }
  target { 0, 0.05, 0 }
}

task : SingleShot {
  integrator { @integrator }
  sampler : Independent {
    spp { 1024 }
  }
  shutter_span { 0.45, 0.55 }
  camera { @camera }
  shapes { @cow, @cows, @another_cow }
}
