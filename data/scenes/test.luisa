Film film : RGB {
  filter : MitchellNetravali {
    radius { 2.0 }
    b { 0.33333333333333 }
    c { 0.33333333333333 }
  }
  resolution { 1280, 800 }
}

Camera camera : ThinLens {
  film { @film }
  position { 0, 0, 15 }
  target { 0, 0, 0 }
  sensor_size { 36, 24 }
  f_number { 1.2 }
  focal_length { 50 }
  up { 0, 1, 0 }
}

Integrator integrator : Normal {}

Shape cube : TriangleMesh {
  file { "data/meshes/cube/cube.obj" }
  transform : Identity {}
  subdiv_level { 2 }
}

Shape left_wall : Replica {
  reference { @cube }
}

Shape right_wall : Instance {

}

Light light : Point {
  position {0, 0, 0}
  emission {10, 10, 10}
}

renderer : SingleShot {
  integrator { @integrator }
  sampler : Independent {
    spp { 128 }
  }
  camera { @camera }
  shapes { @left_wall, @right_wall }
  lights { @light }
}
