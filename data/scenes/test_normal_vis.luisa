Film film : RGB {
  resolution { 1200, 800 }
  filter : MitchellNetravali {
    radius { 1.0 }
    b { 0.33333333333333 }
    c { 0.33333333333333 }
  }
}

Transform a1 : TRS {
  rotation { 0.0, 0.0, 1.0, -10.0 }
}

Transform a2 : TRS {
  rotation { 0.0, 0.0, 1.0, 10.0 }
}

Camera camera : ThinLens {
  film { @film }
  position { 0, 0, 2 }
  target { 0, 0, 0 }
  sensor_size { 36, 24 }
  f_number { 1.2 }
  focal_length { 50 }
  transform : LinearTRSAnimation {
    time_points { 1.0, 2.0 }
    transforms { @a1, @a2 }
  }
}

